#:set s dp(450)

<CanvasExample>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            # pos: self.pos
            # pos: self.center
            pos: self.center_x - s/2, self.center_y - s/2
            # size: self.size
            size: s, s/2

<CanvasExample2>:
    canvas:
        Color:
            # rgb: 0, 1, 0 # green
            rgb: 1, 1, 1 # white
        Rectangle:
            # pos: self.pos
            # pos: self.center
            # pos: self.center_x - s/2, self.center_y - s/2
            # size: self.size
            # size: s, s/2

            pos: self.pos
            size: self.size

            pos: self.center[0]-500/2, self.center[1]
            size: [500, 45]

#:set leds dp(20)
<CanvasLed>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Ellipse:
            # pos: self.pos
            pos: self.center_x, self.center_y - leds/2
            size: leds, leds


